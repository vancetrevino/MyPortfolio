@model EmployeeViewModel
@{

}

<div class="modal fade" id="editEmployeeModal-@Model.Employee.EmployeeId" tabindex="-1" role="dialog" aria-labelledby="editEmployeeLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editEmployeeLabel">Edit Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Admin" asp-action="EditEmployee" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Employee.EmployeeId" />
                    <div class="form-group my-1">
                        <label asp-for="Employee.FirstName" class="">First Name</label>
                        <input asp-for="Employee.FirstName" class="form-control" placeholder="Enter First Name">
                        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group my-1">
                        <label asp-for="Employee.LastName" class="">Last Name</label>
                        <input asp-for="Employee.LastName" class="form-control" placeholder="Enter First Name">
                        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group my-1">
                        <label asp-for="Employee.EmailAddress" class="">Email Address</label>
                        <input asp-for="Employee.EmailAddress" class="form-control" placeholder="Enter Email Address">
                        <span asp-validation-for="Employee.EmailAddress" class="text-danger"></span>
                    </div>
                    <fieldset class="form-group row my-3">
                        <legend class="col-form-label col-sm-4 pt-0">Employee Gender</legend>
                        <div class="col-sm-8">
                            @foreach (var e in System.Enum.GetValues(typeof(gender)).OfType<gender>())
                            {
                                <div class="form-check form-check-inline">
                                    <input type="radio" asp-for="Employee.Gender" class="form-check-input" name="Gender_@e" value="@((int)e)" checked="@(e == Model?.Employee.Gender)" />
                                    <label asp-for="Employee.Gender" class="form-check-label">@e</label>
                                </div>
                            }
                            @*<span asp-validation-for="Employee.Gender" class="text-danger"></span>*@
                        </div>
                    </fieldset>
                    <div class="form-group row my-3">
                        <div class="col-sm-4">Give Admin Rights?</div>
                        <div class="col-sm-8">
                            <div class="form-check">
                                <input asp-for="Employee.HasAdminRights" class="form-check-input" type="checkbox" id="gridCheck1">
                                <label asp-for="Employee.HasAdminRights" class="form-check-label" for="gridCheck1">
                                    Yes
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning">Edit Employee</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>