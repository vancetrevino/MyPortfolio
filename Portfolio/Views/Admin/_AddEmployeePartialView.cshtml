@model Employee
@{

}

<div class="modal fade" id="addEmployeeModall" tabindex="-1" role="dialog" aria-labelledby="addEmployeeLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEmployeeLabel">Add New Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Admin" asp-action="CreateNewEmployee" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter First Name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter First Name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="">Email Address</label>
                        <input asp-for="EmailAddress" class="form-control" placeholder="Enter First Name">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Gender" class="col-sm-2">Employee Gender</label>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                        <div class="form-check form-check-inline">
                          <input asp-for="Gender" class="form-check-input" type="radio" name="newEmployeeGenderRadioOptions" id="newEmployeeGender_Male" value="1">
                          <label asp-for="Gender" class="form-check-label">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input asp-for="Gender" class="form-check-input" type="radio" name="newEmployeeGenderRadioOptions" id="newEmployeeGender_Female" value="2">
                          <label asp-for="Gender" class="form-check-label">Female</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2">Give Admin Rights?</div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input asp-for="HasAdminRights" class="form-check-input" type="checkbox" id="gridCheck1">
                                <label asp-for="HasAdminRights" class="form-check-label" for="gridCheck1">
                                    Yes
                                </label>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add Employee</button>
            </div>
        </div>
    </div>
</div>
